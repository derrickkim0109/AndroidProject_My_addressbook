<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/detail_ll_hide"
    android:layout_height="320sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_Dialog_Tv_Name"
        android:background="#b190ee"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="님의 연락처">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_Dialog_Tv_Call"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="전화걸기">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_Dialog_Tv_Msg"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="문자 보내기">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_Dialog_Tv_Detail"
        android:text="연락처 보기"
        android:textColor="@color/black"
        android:textSize="20dp">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연락처 삭제"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="#BC2D2D"
        android:id="@+id/main_Dialog_Tv_Delete">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/main_Dialog_Btn_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:background="@drawable/login_loginbtn_shape"
            android:textSize="20dp"
            app:backgroundTint="#b190ee"></Button>
    </LinearLayout>
</LinearLayout>